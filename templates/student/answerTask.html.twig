{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{{ task.title }}</h1>
        <div style="width: 500px; word-wrap: break-word">
            <p>{{ task.description }}</p>
        </div>
        {% if existing_answer is not null %}
            {% if existing_answer.grade is not null %}
                <p>Your answer has been evaluated!! Your grade:</p>{{ existing_answer.grade }}
            {% else %}
                <p>Answer already submitted and was not evaulated yet</p>
            {% endif %}

        {% else %}
            <h1>Upload your answer</h1>
            {{ form_start(form) }}
            {{ form_row(form.content) }}
            <button type="submit">submit answer</button>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}
