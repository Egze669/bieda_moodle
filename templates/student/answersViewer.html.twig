{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <ul>
            {% if answers is not null %}
        {% for answer in answers %}
            <p>task: {{ answer.task.title }}
                <br>submit date{{ answer.submitDate|date('Y-m-d H:i') }}
            {% if(answer.grade is not null) %}
            <br>grade: {{ answer.grade }}
                {% else %}
                <br>not yet evaluated
                    {% endif %}
            </p>
            <hr>
        {% endfor %}
            {% else %}
                <p>No answer submitted</p>
            {% endif %}
        </ul>
    </div>
{% endblock %}
