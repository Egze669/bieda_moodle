{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <ul>
            {% if tasks is not empty %}
                {% for task in tasks %}
                    {% if date(task.deactivationDate) < date() %}
                        <li><a href="{{ url('student_answer',{'idTask': task.id}) }}"> {{ task.title }}</a></li>
                    {% endif %}
                {% endfor %}
            {% else %}
                <p>No tasks yet submited</p>
            {% endif %}
        </ul>
    </div>
{% endblock %}
