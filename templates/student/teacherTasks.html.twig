{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <ul>
            {{ dump(tasks) }}
        {% for task in tasks %}
            {{ dump(task) }}
            <li><a href="{{  url('teacher_tasks',{'email': task.id}) }}"> {{ task.title }}</a></li>
            <a href="">answer</a>
        {% endfor %}
        </ul>
    </div>
{% endblock %}
